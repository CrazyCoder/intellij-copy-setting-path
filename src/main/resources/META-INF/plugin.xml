<idea-plugin>
  <id>com.intellij.plugin.copy.options</id>
  <name>Copy Option Path</name>
  <vendor email="sbaranov@gmail.com" url="https://github.com/CrazyCoder">Serge Baranov</vendor>

  <description><![CDATA[
    Adds 'Copy Option Path' action which copies the full path to an option from IDE dialogs.<br>
    ]]></description>

  <idea-version since-build="251"/>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>

  <resource-bundle>messages.CopyOptionPathBundle</resource-bundle>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Register application listener to initialize mouse event interceptor early -->
    <applicationInitializedListener implementation="com.intellij.plugin.copyOptionPath.CopyOptionPathApplicationListener"/>

    <!-- Advanced setting to control mouse click interception -->
    <advancedSetting id="copy.option.path.mouse.intercept"
                     default="false"
                     groupKey="group.advanced.settings.copy.option.path"
                     bundle="messages.CopyOptionPathBundle"/>
  </extensions>

  <actions>
    <action id="CopyOptionsPath" description="Copies option path to clipboard" text="Copy Option Path"
            class="com.intellij.plugin.copyOptionPath.actions.CopyOptionsPath">
      <add-to-group group-id="CutCopyPasteGroup" anchor="last"/>
      <mouse-shortcut keymap="$default" keystroke="control button1"/>
      <mouse-shortcut keymap="Mac OS X 10.5+" keystroke="meta button1"/>
      <mouse-shortcut keymap="Mac OS X" keystroke="meta button1"/>
      <mouse-shortcut keymap="Default for GNOME" keystroke="control button1"/>
      <mouse-shortcut keymap="Default for KDE" keystroke="control button1"/>
      <mouse-shortcut keymap="Default for XWin" keystroke="control button1"/>
    </action>
  </actions>

</idea-plugin>
